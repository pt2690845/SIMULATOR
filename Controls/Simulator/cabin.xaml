<UserControl x:Class="SIMULATOR.Controls.Cabin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SIMULATOR.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="1510" d:DesignWidth="121">
    <UserControl.Resources>
        <SolidColorBrush x:Key="foregorundHighlight" Color="#50B6FE"></SolidColorBrush>
    </UserControl.Resources>
    <Grid Background="Transparent">
        <Path Stroke="{StaticResource foregorundHighlight}" x:Name="CabinIndicator">
                <Path.Data>
                <PathGeometry Figures="M 0,0 L 0,150 L 90,150 L 90,0 L 0,0 M 45,0 L 45,-800 M 90,0"/>
                </Path.Data>
                <Path.RenderTransform>
                    <TranslateTransform x:Name="tt"/>
                </Path.RenderTransform>
        </Path>
    </Grid>
</UserControl>
