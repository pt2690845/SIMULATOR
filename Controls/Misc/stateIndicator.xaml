<UserControl x:Class="SIMULATOR.Controls.stateIndicator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SIMULATOR.Controls"
             mc:Ignorable="d" >
    <UserControl.Resources>
        <SolidColorBrush x:Key="foreground" Color="#22202E"></SolidColorBrush>
        <SolidColorBrush x:Key="background" Color="#282538"></SolidColorBrush>
        <SolidColorBrush x:Key="foregorundHighlight" Color="#50B6FE"></SolidColorBrush>
        <SolidColorBrush x:Key="backgroundHighlight" Color="#FF181E36"></SolidColorBrush>
        <SolidColorBrush x:Key="fontColor" Color="#A5A5B0"></SolidColorBrush>
    </UserControl.Resources>
    <DockPanel Height="auto">
        <TextBlock DockPanel.Dock="Left" x:Name="stateName" Width="160" TextTrimming="CharacterEllipsis" FontSize="20" >Lorem Ipsum loren ipsum</TextBlock>
        <TextBlock DockPanel.Dock="Left" x:Name="separator" FontSize="20">:&#160;</TextBlock>
        <TextBlock DockPanel.Dock="Right" x:Name="currentState" Width="160" TextTrimming="CharacterEllipsis" TextAlignment="Right" FontSize="20">Lorem Ipsum loren ipsum</TextBlock>
    </DockPanel>
</UserControl>
